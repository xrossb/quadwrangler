<?xml version="1.0" encoding="utf-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.quadwrangler" path="/org/gnome/shell/extensions/quadwrangler/">
        <key name="tray-icon" type="b">
            <default>false</default>
            <summary>Tray icon</summary>
            <description>Show a status icon in the system tray</description>
        </key>
        <key name="padding" type="i">
            <default>8</default>
            <summary>Padding</summary>
            <description>Padding between snapped windows</description>
        </key>

        <!-- Halves -->
        <key name="qw-left-half" type="as">
            <default><![CDATA[['<Ctrl><Super>Left']]]></default>
            <summary>Left half</summary>
            <description>Snap to the left half of the screen.</description>
        </key>
        <key name="qw-right-half" type="as">
            <default><![CDATA[['<Ctrl><Super>Right']]]></default>
            <summary>Right half</summary>
            <description>Snap to the right half of the screen.</description>
        </key>
        <key name="qw-top-half" type="as">
            <default><![CDATA[['<Ctrl><Super>Up']]]></default>
            <summary>Top half</summary>
            <description>Snap to the top half of the screen.</description>
        </key>
        <key name="qw-bottom-half" type="as">
            <default><![CDATA[['<Ctrl><Super>Down']]]></default>
            <summary>Bottom half</summary>
            <description>Snap to the bottom half of the screen.</description>
        </key>

        <!-- Quarters -->
        <key name="qw-top-left" type="as">
            <default><![CDATA[['<Ctrl><Super>U']]]></default>
            <summary>Top left</summary>
            <description>Snap to the top left corner of the screen.</description>
        </key>
        <key name="qw-top-right" type="as">
            <default><![CDATA[['<Ctrl><Super>I']]]></default>
            <summary>Top right</summary>
            <description>Snap to the top right corner of the screen.</description>
        </key>
        <key name="qw-bottom-left" type="as">
            <default><![CDATA[['<Ctrl><Super>J']]]></default>
            <summary>Bottom left</summary>
            <description>Snap to the bottom left corner of the screen.</description>
        </key>
        <key name="qw-bottom-right" type="as">
            <default><![CDATA[['<Ctrl><Super>K']]]></default>
            <summary>Bottom right</summary>
            <description>Snap to the bottom right corner of the screen.</description>
        </key>

        <!-- Thirds -->
        <key name="qw-first-third" type="as">
            <default><![CDATA[['<Ctrl><Super>D']]]></default>
            <summary>First third</summary>
            <description>Snap to the left third of the screen.</description>
        </key>
        <key name="qw-center-third" type="as">
            <default><![CDATA[['<Ctrl><Super>F']]]></default>
            <summary>Center third</summary>
            <description>Snap to the center third of the screen.</description>
        </key>
        <key name="qw-last-third" type="as">
            <default><![CDATA[['<Ctrl><Super>G']]]></default>
            <summary>Last third</summary>
            <description>Snap to the right third of the screen.</description>
        </key>
        <key name="qw-first-two-thirds" type="as">
            <default><![CDATA[['<Ctrl><Super>E']]]></default>
            <summary>First two thirds</summary>
            <description>Fill the left two thirds of the screen.</description>
        </key>
        <key name="qw-last-two-thirds" type="as">
            <default><![CDATA[['<Ctrl><Super>T']]]></default>
            <summary>Right two thirds</summary>
            <description>Fill the right two thirds of the screen.</description>
        </key>

        <!-- Other -->
        <key name="qw-maximize" type="as">
            <default><![CDATA[['<Ctrl><Super>Return']]]></default>
            <summary>Maximize</summary>
            <description>Fill the screen.</description>
        </key>
        <key name="qw-center" type="as">
            <default><![CDATA[['<Ctrl><Super>C']]]></default>
            <summary>Center</summary>
            <description>Snap to the center of the screen.</description>
        </key>
        <key name="qw-restore" type="as">
            <default><![CDATA[['<Ctrl><Super>BackSpace']]]></default>
            <summary>Restore</summary>
            <description>Restore the original size and position of the window.</description>
        </key>
    </schema>
</schemalist>
